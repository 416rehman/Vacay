<link rel="stylesheet" href="/css/pages/new/location.css">
<div class="container">
    <div class="formWrapper">
        <div class="formInfo background">
            <i class="fas fa-plus-square"></i>
            <h3>New Location</h3>
        </div>
        <hr>
        <form action="/new/location" method="post" enctype="multipart/form-data">
            <div class="harmonyInput">
                <label for="country">Country</label><br>
                <input id="country" placeholder="Country (France)" type="text" name="country" value="{{preserved.country}}" required="">
            </div>
            <div class="harmonyInput">
                <label for="location">Location</label><br>
                <input id="location" placeholder="Location (Paris)" type="text" name="location" value="{{preserved.location}}" required="">
            </div>
            <div class="harmonyInput">
                <label for="name">Image</label><br>
                <input id="file" placeholder="Image" type="file" name="image" accept="image/x-png,image/gif,image/jpeg">
                <hr>
                <input id="url" placeholder="Image URL" type="text" name="imageURL" value="{{preserved.imageURL}}">
            </div>
            <input type="submit">
            <p id="error">{{error}}</p>
            <p id="status">{{status}}</p>
        </form>
    </div>
</div>
